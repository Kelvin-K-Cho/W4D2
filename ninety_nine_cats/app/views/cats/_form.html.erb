<% if action == :edit %>
  <% action_url = cat_url(cat) %>
  <% submit_text = 'Update Cat' %>
<% else %>
  <% action_url = cats_url %>
  <% submit_text = 'Create Cat' %>
<% end %>

<form action="<%= action_url %>" method="post">
  <% if action == :edit %>
    <input type="hidden" name="_method" value="patch">
  <% end %>

  <label for="name">Name: </label>
  <input id="name" type="text" name="cat[name]" value="<%= cat.name %>">

  <br><br>

  <label for="birth_date">Birth Date: </label>
  <input id="birth_date" type="date" name="cat[birth_date]">


  <br><br>

  <label for="color">Color: </label>
  <select id="color" name="cat[color]">
    <option disabled <%= cat.color ? "" : "selected"%>>-- Select a Color --</option>
    <option value="black" <%= cat.color == "black" ? "selected" : ""%>>black</option>
    <option value="gray" <%= cat.color == "gray" ? "selected" : ""%>>gray</option>
    <option value="yellow" <%= cat.color == "yellow" ? "selected" : ""%>>yellow</option>
    <option value="brown" <%= cat.color == "brown" ? "selected" : ""%>>brown</option>
  </select>

  <br>

  <p>Sex:</p>
  <div>
    <input type="radio" id="Male"
    name="cat[sex]" value="M">
    <label for="Male">Male</label>

    <input type="radio" id="Female"
    name="cat[sex]" value="F">
    <label for="Female">Female</label>
  </div>

  <br>

  <label for="description">Description: </label>
  <br><br>
  <textarea name = "cat[description]">
    <%= cat.description %>
  </textarea>

  <br><br>

  <input type= "submit" value="<%= submit_text %>" >

</form>
